{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    [
      "babel-plugin-styled-components",
      {
        "ssr": true,
        "displayName": true,
        "preprocess": false
      }
    ],
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "configs": "./configs",
          "translations": "./translations",
          "styles": "./styles",
          "components": "./components",
          "helpers": "./helpers"
        }
      }
    ]
  ]
}
